<!DOCTYPE html>
<html>
  <head>
    <%- include('./partials/head') %>
  </head>
  <body>
    <nav class="simply-nav">
      <div class="back-and-ll">
        <a class="nav-icon" href="/dashboard"><i class="fa-solid fa-arrow-left"></i></a>
        <div class="pll-info">
          <h1 class="pll-name"> <%= locals.loggedUser.name + ' ' + locals.loggedUser.lastName %> </h1>
          <p class="pll-section">/ Propiedades</p>
        </div>
      </div>
      <div>
        <a class="nav-icon" href="/landlords/create"><i class="fa-solid fa-plus"></i></a>
        <a class="nav-icon lupa" href=""><i class="fa-solid fa-magnifying-glass"></i></a>
      </div>
    </nav>
    <main>
      <h1>Propietarios</h1>
      <div class="landlord-btn-group">
        <% if (propietarios == '') {%> 
          <a class="landlord-btn" href="/landlords/createSelf">Soy propietario</a>
        <% } %> 
      </div>
      <% propietarios.forEach(propietario => { %> 
        <div class="landlord-card">
          <div class="llc-description">
            <figure class="llc-item llc-photo">
              <img src="/images/landlordsProfile/<%= propietario.profilePhoto %>" alt="Foto">
            </figure>
            <div class="llc-item">
              <p class="llc-name"><%= propietario.name + ' ' + propietario.lastName %></p>
              <p class="llc-phone"><%= propietario.phone %></p>
              <p class="llc-email"><%= propietario.email %></p>
            </div>
          </div>
          <div class=" llc-item llc-actions">
            <a class="enter-icon" href="/landlords/dashboard/<%= propietario.id %>"><i class="fa-regular fa-circle-right"></i></a>
          </div>
        </div>
      <% }) %> 
    </main>
    <footer>

    </footer>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js" integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous"></script>
  </body>
</html>
