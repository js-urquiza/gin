<!DOCTYPE html>
<html>
  <head>
    <%- include('./partials/head') %>
  </head>
  <body>
    <nav class="simply-nav">
      <div class="back-and-ll">
        <a class="nav-icon" href="/landlords/dashboard/<%= propietario.id %>"><i class="fa-solid fa-arrow-left"></i></a>
      </div>
      <div>
        <a class="nav-icon" href="/tenants/create"><i class="fa-solid fa-plus"></i></a>
        <a class="nav-icon lupa" href=""><i class="fa-solid fa-magnifying-glass"></i></a>
      </div>
    </nav>
    <main>
      <section class="pll-info">
          <figure class="pll-photo">
            <img src="/images/landlordsProfile/<%= propietario.profilePhoto %>" alt="Foto">
          </figure>
          <h1 class="pll-name"> <%= propietario.name + ' ' + propietario.lastName %> </h1>
          <p class="pll-section">/ Inquilinos</p>
      </section>
      <section>
        <% inquilinos.forEach(inquilino => { %> 
          <div class="tenant-card">
            <div class="t-card-description">
              <figure class="tenant-photo">
                <img src="/images/tenantsProfile/<%= inquilino.profilePhoto %>" alt="Foto">
              </figure>
              <div>
                <p class="t-card-name"><%= inquilino.name + ' ' + inquilino.lastName %></p>
                <p class="t-card-phone"><%= inquilino.phone %></p>
                <p class="t-card-email"><%= inquilino.email %></p>
              </div>
            </div>
            <div>
              <a href="">Ver</a>
            </div>
          </div>
        <% }) %> 
      </section>
    </main>
    <footer>

    </footer>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js" integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous"></script>
  </body>
</html>

